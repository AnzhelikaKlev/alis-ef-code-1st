@* Views\Asset\_AssetRepairForm.cshtml *@
@model AlisFirst.Areas.AMS.ViewModels.AssetRepairsModel

<div class="column">
    @Html.Partial("_AssetRepairCreate", Model.RepairToCreate)
</div>

<div class="column">
    <h2>Repairs History</h2>
    <table>
        <tr>
            <th>Date
            </th>
            <th>Repair result
            </th>
            <th>Technician
            </th>
        </tr>

        @foreach (var item in Model.RepairHistory)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IssuedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TechnicianName)
                </td>
            </tr>
        }
    </table>
</div>

<div class="clear"></div>




