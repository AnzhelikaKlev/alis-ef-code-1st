@model IEnumerable<AlisFirst.Models.Asset>
@{
    ViewBag.Title = "WarrantyExpireReport";
}

<h2>Warranty Expire Report</h2>

<p>Showing assets that will come out of warranty in @ViewBag.months month(s)</p>
<div style="display:inline-block">
    @Html.ActionLink("1 Month", "WarrantyExpireReport", new { months = 1 })
    <br />
    @Html.ActionLink("2 Month", "WarrantyExpireReport", new { months = 2 })
    <br />
    @Html.ActionLink("3 Month", "WarrantyExpireReport", new { months = 3 })
    <br />
    @Html.ActionLink("6 Months", "WarrantyExpireReport", new { months = 6 })
    <br />
    @Html.ActionLink("9 Month", "WarrantyExpireReport", new { months = 9 })
    <br />
    @Html.ActionLink("1 Year", "WarrantyExpireReport", new { months = 12 })
    <br />
</div>
<div style="display:inline-block">
    <table>
        <tr>
            <th>BarCode
            </th>
            <th>SerialNum
            </th>
            <th>SupplierID
            </th>
            <th>CategoryID
            </th>
            <th>AssetModelID
            </th>
            <th>DateRecieved
            </th>
            <th>WarrantyExpires
            </th>
            <th>PurchaseCost
            </th>
            <th>IsLoanable
            </th>
            <th>Notes
            </th>
            <th>Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BarCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetModelID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRecieved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WarrantyExpires)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsLoanable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AssetID }) |
            @Html.ActionLink("Details", "Details", new { id = item.AssetID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AssetID })
                </td>
            </tr>
        }

    </table>

</div>
