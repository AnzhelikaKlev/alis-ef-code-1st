@model AlisFirst.Areas.AMS.ViewModels.ListEmployeeViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    @using(Html.BeginForm())
    {
        @Html.TextBoxFor(model => model.SearchKey)
        <input type="submit" value="Search" />
    }
<table>
    <tr>
        <th>

        </th>
        <th>
            Bar Code
        </th>
        <th>
