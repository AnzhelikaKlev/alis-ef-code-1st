@model AlisFirst.Models.Loan

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Loan</legend>

    <div class="display-label">LoanDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.LoanDate)</div>

    <div class="display-label">DueDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.DueDate)</div>

    <div class="display-label">ReturnDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ReturnDate)</div>

    <div class="display-label">Asset</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Asset).ToString()</div>

    <div class="display-label">Borrower</div>
    <div class="display-field">@(Model.Borrower == null ? "None" : Model.Borrower.Surname)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.LoanID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


