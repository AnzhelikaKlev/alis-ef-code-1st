@model AlisFirst.Models.Supplier

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Supplier</legend>

    <div class="display-label">SupplierName</div>
    <div class="display-field">@Model.SupplierName</div>

    <div class="display-label">Assets</div>
    <div class="display-field">@(Model.Assets == null ? "None" : Model.Assets.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.SupplierID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


