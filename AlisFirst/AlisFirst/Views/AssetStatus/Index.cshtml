@model IEnumerable<AlisFirst.Models.AssetStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            AssetStatusName
        </th>
        <th>
            AssignedStatuses
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AssetStatusID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AssetStatusID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AssetStatusID })
        </td>
        <td>
			@item.AssetStatusName
        </td>
        <td>
			@(item.AssignedStatuses == null ? "None" : item.AssignedStatuses.Count.ToString())
        </td>
    </tr>
}

</table>


