@model AlisFirst.Models.AssignedStatus

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>AssignedStatus</legend>

    <div class="display-label">AssignedDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.AssignedDate)</div>

    <div class="display-label">Asset</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Asset).ToString()</div>

    <div class="display-label">AssetStatus</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.AssetStatus).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.AssignedStatusID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


