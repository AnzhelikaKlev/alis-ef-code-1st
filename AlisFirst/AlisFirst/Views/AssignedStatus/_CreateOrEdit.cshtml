@model AlisFirst.Models.AssignedStatus

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.AssignedDate)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.AssignedDate)
    @Html.ValidationMessageFor(model => model.AssignedDate)
</div>

<div class="editor-label">
    Asset
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.AssetID, ((IEnumerable<AlisFirst.Models.Asset>)ViewBag.PossibleAssets).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.AssetID.ToString(),
        Selected = (Model != null) && (option.AssetID == Model.AssetID)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.AssetID)
</div>
<div class="editor-label">
    AssetStatus
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.AssetStatusID, ((IEnumerable<AlisFirst.Models.AssetStatus>)ViewBag.PossibleAssetStatus).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.AssetStatusID.ToString(),
        Selected = (Model != null) && (option.AssetStatusID == Model.AssetStatusID)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.AssetStatusID)
</div>
