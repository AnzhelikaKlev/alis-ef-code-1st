@model AlisFirst.Models.Manufacturer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Manufacturer</legend>

    <div class="display-label">ManufacturerName</div>
    <div class="display-field">@Model.ManufacturerName</div>

    <div class="display-label">AssetModels</div>
    <div class="display-field">@(Model.AssetModels == null ? "None" : Model.AssetModels.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ManufacturerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


