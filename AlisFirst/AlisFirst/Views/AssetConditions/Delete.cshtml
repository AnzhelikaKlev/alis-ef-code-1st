@model AlisFirst.Models.AssetCondition

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>AssetCondition</legend>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">IssuedDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.IssuedDate)</div>

    <div class="display-label">Asset</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Asset).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


