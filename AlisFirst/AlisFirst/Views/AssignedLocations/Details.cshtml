@model AlisFirst.Models.AssignedLocation

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>AssignedLocation</legend>

    <div class="display-label">AssignedLocationDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.AssignedLocationDate)</div>

    <div class="display-label">Asset</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Asset).ToString()</div>

    <div class="display-label">Location</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Location).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.AssignedLocationID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


